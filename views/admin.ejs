<h1>Admin Panel</h1>

<div class="admin-panel">
  <h2>User Management</h2>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <% if (user.role !== 'admin') { %>
              <a href="/admin-roles?username=<%= user.username %>&action=upgrade">Promote to Admin</a>
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div> 